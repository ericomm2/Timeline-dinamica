<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <h1>Criar nova conta:</h1>
      <form action="/" method="post" role="form">
        <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %>/>
        <div class="form-group">
          <label for="email">E-mail:</label>
          <input type="email" class="form-control" id="email" name="user[email]"/>
          <% if flash[:email] %><div class="alert alert-danger">Email já cadastrado!</div><% end %>
        </div>
        <div class="form-group">
          <label for="username">Nome de Usuário:</label>
          <input type="text" class="form-control" id="username" name="user[username]"/>
          <% if flash[:user] %><div class="alert alert-danger">Usuário já existe!</div><% end %>
        </div>
        <div class="form-group">
          <label for="bio">Bio:</label>
          <textarea class="form-control" id="bio" name="user[bio]" maxlength="150">Insira uma curta descrição sobre você, com limite de 150 caracteres.</textarea>
        </div>
        <div class="form-group">
          <label for="foto">Foto:</label>
          <input type="text" class="form-control" id="foto" name="user[foto]" value="https://upload.wikimedia.org/wikipedia/commons/thumb/1/12/User_icon_2.svg/2000px-User_icon_2.svg.png"/>
        </div>
        <div class="form-group">
          <label for="password">Senha:</label>
          <input type="password" class="form-control" name="user[password]"/>
        </div>
        <button type="submit" class="btn btn-primary">Criar nova conta!</button>
      </form>
    </div>
    <div class="col-sm-1"></div>
    <div class="col-xs-12 col-sm-5">
      <h1>Fazer Login:</h1>
      <form action="/login" method="post" role="form">
        <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %>/>
        <div class="form-group">
          <label for="username">Nome de Usuário:</label>
          <input type="text" class="form-control" id="username" name="user[username]"/>
        </div>
        <div class="form-group">
          <label for="password">Senha:</label>
          <input type="password" class="form-control" name="user[password]"/>
        </div>
        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>Fazer Login!</button>
      </form>
    </div>
  </div>
</div>