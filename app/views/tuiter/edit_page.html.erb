<div class="container">
  <h1>Criar nova conta:</h1>
  <form action="/" method="post" role="form">
    <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %>/>
    <div class="form-group">
      <label for="email">E-mail:</label>
      <input type="email" class="form-control" value="<%= @user[:email] %>" id="email" name="user[email]"/>
    </div>
    <div class="form-group">
      <label for="username">Nome de Usuário:</label>
      <input type="text" class="form-control" value="<%= @user[:username] %>" id="username" name="user[username]"/>
    </div>
    <div class="form-group">
      <label for="bio">Bio:</label>
      <textarea class="form-control" value="<%= @user[:bio] %>" id="bio" name="user[bio]" maxlength="150">Insira uma curta descrição sobre você, com limite de 150 caracteres.</textarea>
    </div>
    <div class="form-group">
      <label for="foto">Foto:</label>
      <input type="text" class="form-control" value="<%= @user[:image] %>" id="foto" name="user[foto]" value="https://upload.wikimedia.org/wikipedia/commons/thumb/1/12/User_icon_2.svg/2000px-User_icon_2.svg.png"/>
    </div>
    <button type="submit" class="btn btn-primary">Criar nova conta!</button>
  </form>
</div>